.container { padding: 16rpx; }
.panel { background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04); }
.row { display: flex; align-items: center; margin-top: 16rpx; }
.label { width: 120rpx; color: #333; }
.hint { margin-left: 12rpx; color: #999; font-size: 24rpx; }
.btn { margin: 12rpx 0; }
.primary { background: #111827; color: #fff; }
.thumbs { white-space: nowrap; margin: 16rpx 0; }
.thumb { width: 160rpx; height: 160rpx; border-radius: 12rpx; margin-right: 12rpx; background: #f0f0f0; }
.thumb.selected { outline: 4rpx solid #111827; }
.canvasWrap { background: #fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04); }
.actions { display: flex; gap: 16rpx; margin-top: 16rpx; }
