.container { padding: 16rpx; }
.panel { display: none; }
/* 恢复 row 用于弹窗里的设置项 */
.row { display: flex; align-items: center; margin-top: 16rpx; }
.label { width: 120rpx; color: #333; }
.hint { margin-left: 12rpx; color: #999; font-size: 24rpx; }
.btn { margin: 12rpx 0; }
.primary { background: #111827; color: #fff; }
.thumbArea { width: 100%; margin: 16rpx 0; position: relative; background: #f8f8f8; border-radius: 12rpx; overflow: hidden; }
.thumbMV { position: absolute; }
.thumbBox { width: 100%; height: 100%; border-radius: 12rpx; overflow: hidden; position: relative; background: #f0f0f0; }
.thumbBox.selected { outline: 4rpx solid #111827; }
.thumbImg { width: 100%; height: 100%; display: block; }
.delBadge { display: none; }
.selBadge { position: absolute; right: 4rpx; top: 4rpx; width: 40rpx; height: 40rpx; border-radius: 20rpx; border: 2rpx solid #6b7280; background: rgba(255,255,255,0.8); }
.selBadge.checked { background: #007aff; border-color: #007aff; }
.selTick { position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); font-size: 28rpx; color: #fff; line-height: 1; }

/* 上传占位卡片 */
.addTile { width: 100%; height: 100%; border: 2rpx dashed #d1d5db; border-radius: 12rpx; background: #fff; display: flex; align-items: center; justify-content: center; flex-direction: column; color: #6b7280; }
.addPlus { font-size: 64rpx; line-height: 1; }
.addText { margin-top: 8rpx; font-size: 24rpx; }
.addBadge { position: absolute; right: 8rpx; top: 8rpx; font-size: 24rpx; color: #ef4444; }
.canvasWrap { background: #fff; border-radius: 16rpx; padding: 16rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04); position: relative; }
.canvasWrap.hidden { display: none; height: 0; padding: 0; }
.previewHit { position: absolute; left: 16rpx; right: 16rpx; top: 16rpx; bottom: 16rpx; }
.blankTap { display: none; }
.tips { min-height: 120rpx; }
.actions { display: flex; gap: 16rpx; margin-top: 16rpx; }

/* 进度条 */
.progressWrap { display: flex; align-items: center; gap: 16rpx; margin: 16rpx 0; }
.progressBar { flex: 1; height: 16rpx; background: #e5e7eb; border-radius: 16rpx; overflow: hidden; }
.progressInner { height: 100%; background: #111827; width: 0; transition: width 0.15s ease; }
.progressText { color: #333; font-size: 24rpx; width: 80rpx; text-align: right; }

/* 拼图中遮罩（禁止一切操作，居中进度） */
.busyMask { position: fixed; left: 0; top: 0; right: 0; bottom: 0; z-index: 999; background: rgba(255,255,255,0.7); display: flex; align-items: center; justify-content: center; }
.busyBox { width: 80%; max-width: 520rpx; background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.2); display: flex; align-items: center; gap: 16rpx; flex-wrap: wrap; justify-content: center; }
.progressNote { width: 100%; text-align: center; color: #6b7280; font-size: 26rpx; margin-top: 8rpx; }

/* 底部固定栏 */
.fixedBar { position: fixed; left: 0; right: 0; bottom: 0; padding: 8rpx 16rpx calc(env(safe-area-inset-bottom) + 8rpx) 16rpx; background: #fff; box-shadow: 0 -8rpx 24rpx rgba(0,0,0,0.06); display: flex; justify-content: space-around; gap: 12rpx; }
.barBtn {flex: 1; background: transparent; border-radius: 12rpx; padding: 8rpx 8rpx; display: flex; align-items: center; justify-content: center; gap: 8rpx; flex-direction: column; border: none; outline: none; box-shadow: none;}
.barBtn::after { border: none; }
.barBtn:disabled { opacity: 0.5; }
.barIcon { width: 44rpx; height: 44rpx; position: relative; display: flex; align-items: center; justify-content: center; }
.barIcon .seg { background: #6b7280; border-radius: 2rpx; }
.barIcon.v { flex-direction: column; gap: 6rpx; }
.barIcon.v .seg { width: 34rpx; height: 6rpx; }
.barIcon.h { flex-direction: row; gap: 6rpx; }
.barIcon.h .seg { width: 6rpx; height: 34rpx; }
.barText { color: #111827; font-size: 26rpx; margin-top: 4rpx; }
.barGlyph { font-size: 36rpx; line-height: 1; }

/* 底部提示小字 */
.tips { color: #9ca3af; font-size: 22rpx; display: flex; flex-direction: column; gap: 6rpx; margin: 16rpx 8rpx 140rpx 8rpx; }
.tipsInner { transition: opacity 0.2s ease; display: flex; flex-direction: column; gap: 6rpx; }
.tipsInner.transparent { opacity: 0; }

/* 自定义对话框 */
.modalRoot { position: fixed; left: 0; top: 0; right: 0; bottom: 0; z-index: 999; }
.modalMask { position: absolute; left: 0; top: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.5); }
.modalBody { position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); width: 80%; background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 12rpx 32rpx rgba(0,0,0,0.2); }
.modalTitle.center { text-align: center; font-size: 30rpx; font-weight: 600; margin-bottom: 8rpx; }
.gapControls { display: flex; align-items: center; gap: 12rpx; }
.stepBtn { width: 48rpx; height: 48rpx; line-height: 48rpx; text-align: center; background: #f3f4f6; border-radius: 8rpx; font-size: 32rpx; color: #111827; }
.gapNumber { min-width: 64rpx; text-align: center; font-size: 28rpx; color: #111827; padding: 0 8rpx; }
.gapInput { flex: 1; height: 64rpx; background: #f9fafb; border-radius: 8rpx; padding: 0 12rpx; }
.smallHint .hint { color: #9ca3af; }
.modalImg { width: 100%; height: 400rpx; object-fit: contain; border-radius: 12rpx; background: #f5f5f5; }
.modalBtns { display: flex; justify-content: flex-end; gap: 16rpx; margin-top: 16rpx; }
